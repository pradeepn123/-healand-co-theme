{%- liquid
    assign image = block.settings.image
    assign heading = block.settings.heading
    assign description = block.settings.description
-%}

<div class="ingredients_wrapper">
    <div class="img_wrap_text_info {% unless image != blank %} blankImage_keyIngredients {% endunless %}">
        {% if image != blank %}
            <div class="img_wrap">
                <img src="{{ image | image_url }}" alt="">
            </div>
        {% endif %}
        <div class="key_ingre_title">
            <h4>{{ heading }}</h4>
        </div>
    </div>
    <div class="key_ingre_description">
        <p>
            {{ description }}
        </p>
    </div>            
</div>