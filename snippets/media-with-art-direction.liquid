{%- liquid
  assign has_desktop_video = false
  assign has_desktop_image = false
  assign has_mobile_video = false
  assign has_mobile_image = false
  assign placeholder_type = placeholder_type | default: 'lifestyle-2'

  if mobile_img == blank and mobile_video == blank
    if desktop_video != blank
      assign mobile_video = desktop_video
    endif

    if desktop_img != blank
      assign mobile_img = desktop_img
    endif
  endif

  if desktop_img == blank and desktop_video == blank
    if mobile_video != blank
      assign desktop_video = mobile_video
    endif

    if mobile_img != blank
      assign desktop_img = mobile_img
    endif
  endif

  if desktop_video != blank
    assign has_desktop_video = true
  endif

  if desktop_img != blank
    assign has_desktop_image = true
  endif

  if mobile_video != blank
    assign has_mobile_video = true
  endif

  if mobile_img != blank
    assign has_mobile_image = true
  endif
-%}

<div class='media {{ class }}'>
  {%- if with_overlay -%}
    <div class='overlay'></div>
  {%- endif -%}

  {%- if has_desktop_video -%}
    {% render 'video-with-alt', video: desktop_video, class: 'image media__image media__image--desktop' %}
  {%- elsif has_desktop_image -%}
    <img
      class='image media__image media__image--desktop lazyload'
      loading='lazy'
      src='{{ desktop_img | image_url: width: 160 }}'
      alt='{{ desktop_img.alt }}'
      width='{{desktop_img.width}}'
      height='{{desktop_img.height}}'
      data-parent-fit='cover'
      data-aspectratio='{{ desktop_img.aspect_ratio }}'
      data-sizes='auto'
      style='object-position: {{ desktop_img.presentation.focal_point }};'
      data-srcset='{%- render 'srcset-for-image', image: desktop_img -%}'
    >
  {%- endif -%}

  {%- if has_mobile_video -%}
    {% render 'video-with-alt', video: mobile_video, class: 'image media__image media__image--mobile' %}
  {%- elsif has_mobile_image -%}
    <img
      class='image media__image media__image--mobile lazyload'
      loading='lazy'
      src='{{ mobile_img | image_url: width: 160 }}'
      alt='{{ mobile_img.alt }}'
      width='{{mobile_img.width}}'
      height='{{mobile_img.height}}'
      data-parent-fit='cover'
      data-aspectratio='{{ mobile_img.aspect_ratio }}'
      data-sizes='auto'
      style='object-position: {{ mobile_img.presentation.focal_point }};'
      data-srcset='{%- render 'srcset-for-image', image: mobile_img -%}'
    >
  {%- endif -%}

  {% if with_placeholder == true %}
    {%- if desktop_img == blank and desktop_video == blank and mobile_img == blank and mobile_video == blank -%}
      {{
        placeholder_type
        | placeholder_svg_tag: 'placeholder-image placeholder-image--with-content image media__image media__image-placeholder'
      }}
    {%- endif -%}
  {% endif %}
</div>
