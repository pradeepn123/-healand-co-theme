{%- liquid
  assign options = block.settings
  assign text = options.text
  assign url = options.link.url
  assign btn_style = options.btn_style
  assign custom_icon_image = options.custom_icon_image
  assign icon = options.icon
-%}

{%- if text != blank -%}
  <div class='product-button-block block-{{ block.id }}' {{ block.shopify_attributes }}>
    {%- if btn_style == 'link' -%}
      <a
        class='product-button-block__text'
        href='{% if url != blank %}{{ url }}{% else %}#{% endif %}'
        aria-label='{{ text }}'
      >
        {%- if custom_icon_image != blank -%}
          <img
            loading='lazy'
            alt='{{ custom_icon_image.alt }}'
            class='product-button-block__icon lazyload'
            width='24'
            height='24'
            src='{{ custom_icon_image | image_url: width: 24 }}'
            style='object-position: {{ custom_icon_image.presentation.focal_point }};'
            data-aspectratio='{{ custom_icon_image.aspect_ratio }}'
            data-srcset='{%- render 'srcset-for-image', image: custom_icon_image, size: 'small' -%}'
            data-sizes='auto'
          >
        {%- elsif icon != 'none' -%}
          {% render 'icon-pack', icon: icon, class: 'product-button-block__icon' %}
        {%- endif -%}
        {{ text }}
      </a>
    {%- else -%}
      <a
        class='btn btn--lg btn--{{ btn_style }} {% if btn_style == 'outline' %} btn--outline-with-particular-text-color{% endif %} product-button-block__btn'
        href='{% if url != blank %}{{ url }}{% else %}#{% endif %}'
        aria-label='{{ text }}'
      >
        {%- if custom_icon_image != blank -%}
          <img
            loading='lazy'
            alt='{{ custom_icon_image.alt }}'
            class='product-button-block__icon lazyload'
            width='24'
            height='24'
            src='{{ custom_icon_image | image_url: width: 24 }}'
            style='object-position: {{ custom_icon_image.presentation.focal_point }};'
            data-aspectratio='{{ custom_icon_image.aspect_ratio }}'
            data-srcset='{%- render 'srcset-for-image', image: custom_icon_image, size: 'small' -%}'
            data-sizes='auto'
          >
        {%- elsif icon != 'none' -%}
          {% render 'icon-pack', icon: icon, class: 'product-button-block__icon' %}
        {%- endif -%}
        {{- text -}}
      </a>
    {%- endif -%}
  </div>
{%- endif -%}
