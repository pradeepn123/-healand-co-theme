{{ 'landing-page-bundle-section.css' | asset_url | stylesheet_tag }}

{%- liquid
    assign options = section.settings    
    assign heading = options.heading
    assign text = options.text
-%}

<div class="landing-page-bundle-section">
    <div class="landing-page-bundle-section__wrapper">
        <div class="landing-page-bundle-section__content">
            <div class="landing-page-bundle-section__heading">
                {%- liquid
                    assign heading = heading
                    assign text = text
                -%}
                {% render 'section-header', heading: heading, text: text, wrapper_class:'bundle-section-center' %}
            </div>
            <div class="landing-page-bundle-section__information">
                {% for block in section.blocks %}
                    {% render 'landing-bundle-sec-info', block: block , block_index: forloop.index %}
                {% endfor %}
            </div>
        </div>
    </div>
</div>


{% schema %}
{
    "name": "Landing page bundle sec",
    "settings": [ 
        {
            "type": "text",
            "id": "heading",
            "label": "t:sections.collection_list.title_label"
        },
        {
            "type": "richtext",
            "id": "text",            
            "label": "Content"
        }
    ],
    "blocks": [    
        {
            "type": "text",
            "name": "t:sections.rich_text.text_block_name",
            "settings": [
                {
                    "type": "paragraph",
                    "content": "t:sections.rich_text.blocks.text.description.content"
                },
                {
                    "type": "text",
                    "id": "tag_heading",
                    "label": "Percentage Heading"
                },
                {
                    "type": "text",
                    "id": "heading",
                    "label": "Heading"
                },
                {
                    "type": "text",
                    "id": "button_label",
                    "label": "Button Label"
                },
                {
                    "type": "richtext",
                    "id": "content",
                    "label": "Content info"
                },
                {
                    "type": "product",
                    "id": "product",
                    "label": "Choose Product"
                },
                {
                    "type": "richtext",
                    "id": "description",                    
                    "label": "t:sections.rich_text.blocks.text.text_1.label"
                },
                {
                    "type": "text",
                    "id": "shipping_text",
                    "label": "free shipping text"
                }
            ]
        }
    ],
    "presets": [
        {
            "name": "Landing page bundle sec"
        }
    ]
}
{%  endschema %}