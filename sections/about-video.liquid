"name": "Video Section",
"settings": [
{
"type": "video",
"id": "video_url",
"label": "Video"
},
{
"type": "image_picker",
"id": "thumbnail",
"label": "Thumbnail"
},
{
"type": "image_picker",
"id": "play-icon",
"label": "Play icon"
}
],
"presets": [
{
"name": "Video Section"
}
]
}
{% endschema %}