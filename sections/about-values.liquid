<section class="about-values">
    <div class="container">
        <div class="values_wrp">
            <div class="values-main-heading">
                <h1 class=" h1 decorated_heading">{{ section.settings.val-main-heading }}</h1>
            </div>

            <div class="values-main hover-div">
                {% for block in section.blocks %}
                    <div class="values-block" style="background:{{block.settings.user_color}}">
                        <h3 class="values-heading">{{block.settings.val-heading}}</h3>
                        <div class="values-block-hover values-grid new-div" style="background:{{block.settings.user_color}}">
                            <h3 class="values-heading-hover">{{block.settings.val-heading}}</h3>
                            <p class="values-desc">{{block.settings.val-desc}}</p>
                        </div>
                    </div>
                {% endfor %}

                
            </div>
        </div>
    </div>
</section>







{% schema %}
{
"name": "About Values Block",
"settings": [
                {
                    "type": "text",
                    "id": "val-main-heading",
                    "label": "Main Heading"
                }
            ],

"blocks": [
            {
            "name": "Values Block",
            "type": "cardType",
            "settings": [
                            {
                                "type": "text",
                                "id": "val-heading",
                                "label": "Heading"
                            },
                            {
                                "type": "text",
                                "id": "val-desc",
                                "label": "Description"
                            },
                            {
                                "type": "color",
                                "id": "user_color",
                                "label": "Color"
                            }
                        ]
            }
        ],
"presets": [
            {
                "name": "About values Block"
            }
        ]
}
{% endschema %}